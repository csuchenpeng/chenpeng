<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content">

	<LinearLayout android:id="@+id/LinearLayout01_reply"
		android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical">


		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/reply_title"
			android:text=""></TextView>
		<EditText android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/reply_content"
			android:width="300px" android:height="200px" android:inputType="textMultiLine"></EditText>
		<Button android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="回复评论"
			android:id="@+id/reply_button"></Button>
	</LinearLayout>
</LinearLayout>
