<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:background="@drawable/background">


<LinearLayout android:id="@+id/LinearLayout01" android:layout_width="wrap_content" android:layout_height="wrap_content"><TextView android:layout_height="wrap_content" android:id="@+id/login_title" android:textColor="@color/black" android:textSize="15px" android:background="@drawable/login_title_bg" android:layout_width="320px" android:gravity="center_vertical"></TextView>
<TextView android:layout_width="wrap_content" android:id="@+id/login_null_textView" android:visibility="gone" android:layout_height="50px"></TextView>
</LinearLayout><TableLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/login_TableLayout"><TableRow android:id="@+id/TableRow02" android:layout_width="wrap_content" android:layout_height="wrap_content"><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/userName_label" android:text="用户名：" android:textColor="@color/black"></TextView>
<EditText android:layout_height="wrap_content" android:id="@+id/userName_text" android:layout_width="250px"></EditText>
</TableRow>
<TableRow android:id="@+id/TableRow01" android:layout_width="wrap_content" android:layout_height="wrap_content"><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/userPass_label" android:text="密码：" android:textColor="@color/black"></TextView>
<EditText android:layout_height="wrap_content" android:id="@+id/userPass_text" android:layout_width="250px" android:inputType="textPassword"></EditText>
</TableRow>
<TableRow android:id="@+id/TableRow03" android:layout_width="wrap_content" android:layout_height="wrap_content"><Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="取消" android:id="@+id/login_cancel"></Button>
<Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/login_submit" android:text="登录"></Button>
</TableRow>
</TableLayout>


</LinearLayout>
